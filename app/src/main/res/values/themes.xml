<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--For LIGHT MODE SCREEN-->
    <style name="Theme.Online_Rent_A_Car" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background_color">#FFFFFF</item>
        <item name="text_color">#000000</item>
    </style>

    <!--Krijimi i style per largimin e ActionBar te cilen pastaj e kemi shtu tek AndroidManifest si theme-->
    <style name="Theme.Online_Rent_A_Car.NoActionBarAndStatusBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>